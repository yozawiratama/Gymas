# Central MySQL (primary)
DATABASE_URL="mysql://user:password@host:3306/gymas"
SHADOW_DATABASE_URL="mysql://user:password@host:3306/gymas_shadow"

# SUPER_ADMIN seed (change in production)
SUPERADMIN_USERNAME="superadmin"
SUPERADMIN_PASSWORD="ChangeMe123!"

# Device + gym identifiers
DEVICE_ID="device-001"
GYM_ID="gym-001"

# Optional environment flags
APP_ENV="development"
NODE_ENV="development"
HEALTH_DB_ENABLED="false"

# Sync shared secret (required to authorize /sync/push)
SYNC_SHARED_SECRET="ChangeThisSyncSecret"

# Login throttling (optional)
AUTH_LOGIN_WINDOW_MINUTES="10"
AUTH_LOGIN_MAX_ATTEMPTS="8"
